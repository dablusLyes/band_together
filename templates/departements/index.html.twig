{% extends 'dashboard.html.twig' %}

{% block title %}Departements index{% endblock %}

{% block body %}

<div id="content-wrapper">
  <div class="container-fluid">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fas fa-table"></i>Departements <a href="{{ path('departements_new') }}">Ajouter</a></div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                      <th>Id</th>
                      <th>Nom</th>
                      <th>Edition</th>
                      <th>Supression</th>
                  </tr>
              </thead>
              <tbody>
              {% for departement in departements %}
                  <tr>
                      <td>{{ departement.id }}</td>
                      <td>{{ departement.nom }}</td>
                      <td><a class="btn btn-info" href="{{ path('instruments_edit', {'id': departement.id}) }}">edit</a></td>
                      <td>{{ include('departements/_delete_form.html.twig') }}</td>
                  </tr>
              {% else %}
                  <tr>
                      <td colspan="3">no records found</td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

{% endblock %}
