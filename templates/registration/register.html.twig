{% extends 'frontbase.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block body %}
    <section class="register">
        <div class="wrap">

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <h1>Inscription</h1>
            {{ form_row(registrationForm.username, { 'label': 'Nom d\'utilisateur' } ) }}
            {{ form_row(registrationForm.email, { 'label': 'Email' }) }}
            {{ form_row(registrationForm.password, { 'label': 'Mot de passe' }) }}
            {{ form_row(registrationForm.passwordConfirm, { 'label': 'Confirmation de mot de passe' }) }}

            <input type="submit" value="Inscription">
            {{ form_end(registrationForm) }}
        </div>
    </section>
{% endblock %}
